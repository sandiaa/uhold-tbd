{
    "protocol": "https://didcomm.org/uhold/uholdChat",
    "published": true,
    "types": {
      "message": {
        "schema": "https://didcomm.org/uhold/schemas/chat",
        "dataFormats": ["application/json"]
      }
    },
    "structure": {
        "message": {
          "$actions": [
            { "who": "anyone", "can": "write" },
            { "who": "author", "of": "message", "can": "read" },
            { "who": "recipient", "of": "message", "can": "read" },
            { "who": "recipient", "of": "message", "can": "update" },
            { "who": "author", "of": "message", "can": "update" }
          ]
      }
    }
  }